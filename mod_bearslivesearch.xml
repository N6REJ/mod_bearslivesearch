<?xml version="1.0" encoding="utf-8"?>
<extension type = "module" version = "5.0" client = "site" method = "upgrade">
    <name>Bears Live Search</name>
    <author>N6REJ</author>
    <authorEmail>troy@hallhome.us</authorEmail>
    <authorUrl>https://hallhome.us/software</authorUrl>
    <creationDate>2025 August 06</creationDate>
    <copyright>Copyright (C) 2025 N6REJ</copyright>
    <license>GNU General Public License version 3 or later; see License.txt</license>
    <version>2025.08.06.2</version>
    <description>Bears Accessibility search module using Ajax.</description>
    <files>
        <filename module = "mod_bearslivesearch">mod_bearslivesearch.php</filename>
        <filename>mod_bearslivesearch.xml</filename>
        <filename>helper.php</filename>
        <filename>tmpl/default.php</filename>
        <filename>License.txt</filename>
        <folder>fields</folder>
        <folder>media</folder>
    </files>
    <languages>
        <language tag = "en-GB">language/en-GB/en-GB.mod_bearslivesearch.ini</language>
        <language tag = "en-GB">language/en-GB/en-GB.mod_bearslivesearch.sys.ini</language>
    </languages>
    <module>
        <published>1</published>
    </module>
    <config>
        <fields name = "params">
            <fieldset name = "basic">
                <field name = "output_limit" type = "number" label = "MOD_BEARSLIVESEARCH_OUTPUT_LIMIT" description = "MOD_BEARSLIVESEARCH_OUTPUT_LIMIT_DESC" default = "300"
                       min = "10" max = "1000" />
                <field name = "results_limit" type = "number" label = "MOD_BEARSLIVESEARCH_RESULTS_LIMIT" description = "MOD_BEARSLIVESEARCH_RESULTS_LIMIT_DESC" default = "10" min = "10" max = "200" required="true" step="10" />
                <field name="show_criteria" type="list" label="MOD_BEARSLIVESEARCH_SHOW_CRITERIA_LABEL" description="MOD_BEARSLIVESEARCH_SHOW_CRITERIA_DESC" default="always">
                    <option value="always">MOD_BEARSLIVESEARCH_SHOW_CRITERIA_ALWAYS</option>
                    <option value="after">MOD_BEARSLIVESEARCH_SHOW_CRITERIA_AFTER</option>
                </field>
                <field name="search_mode" type="list" label="MOD_BEARSLIVESEARCH_SEARCH_MODE_LABEL" description="MOD_BEARSLIVESEARCH_SEARCH_MODE_DESC" default="inline">
                    <option value="inline">MOD_BEARSLIVESEARCH_SEARCH_MODE_INLINE</option>
                    <option value="separate_page">MOD_BEARSLIVESEARCH_SEARCH_MODE_SEPARATE_PAGE</option>
                </field>
                <field name="position" type="list" label="MOD_BEARSLIVESEARCH_POSITION_LABEL" description="MOD_BEARSLIVESEARCH_POSITION_DESC" default="none">
                    <option value="left">Left</option>
                    <option value="right">Right</option>
                    <option value="none">Center</option>
                </field>
                <field name="margin" type="text" label="MOD_BEARSLIVESEARCH_MARGIN_LABEL" description="MOD_BEARSLIVESEARCH_MARGIN_DESC" default="0 auto" />
                <field name = "input_margin" type = "text" label = "MOD_BEARSLIVESEARCH_INPUT_MARGIN" description = "MOD_BEARSLIVESEARCH_INPUT_MARGIN_DESC" default = "1em 0" />
                <field name = "output_margin" type = "text" label = "MOD_BEARSLIVESEARCH_OUTPUT_MARGIN" description = "MOD_BEARSLIVESEARCH_OUTPUT_MARGIN_DESC" default = "1em 0" />
                <field name = "width" type = "text" label = "MOD_BEARSLIVESEARCH_WIDTH" description = "MOD_BEARSLIVESEARCH_WIDTH_DESC" default = "50%" />
                <field name = "border_radius" type = "text" label = "MOD_BEARSLIVESEARCH_INPUT_BORDER_RADIUS" description = "MOD_BEARSLIVESEARCH_INPUT_BORDER_RADIUS_DESC" default = "0" />
                <field name = "border_size" type = "text" label = "MOD_BEARSLIVESEARCH_INPUT_BORDER_SIZE" description = "MOD_BEARSLIVESEARCH_INPUT_BORDER_SIZE_DESC" default = "1px" />
                <field name = "border_color" type = "color" label = "MOD_BEARSLIVESEARCH_INPUT_BORDER_COLOR" description = "MOD_BEARSLIVESEARCH_INPUT_BORDER_COLOR_DESC" default = "#e0e0e0" />
                <field name = "accent_border_color" type = "color" label = "MOD_BEARSLIVESEARCH_ACCENT_BORDER_COLOR" description = "MOD_BEARSLIVESEARCH_ACCENT_BORDER_COLOR_DESC" default = "#007bff" />
                <field name = "search_icon" type = "list" label = "MOD_BEARSLIVESEARCH_SEARCH_ICON" description = "MOD_BEARSLIVESEARCH_SEARCH_ICON_DESC" default = "icon-search">
                    <option value="">MOD_BEARSLIVESEARCH_SEARCH_ICON_NONE</option>
                    <option value="icon-search">MOD_BEARSLIVESEARCH_SEARCH_ICON_JOOMLA</option>
                    <option value="fas fa-search">MOD_BEARSLIVESEARCH_SEARCH_ICON_FONTAWESOME</option>
                </field>
                <field
                    addfieldpath="/modules/mod_bearslivesearch/fields"
                    name="end_position"
                    type="endpositions"
                    label="MOD_BEARSLIVESEARCH_END_POSITION_LABEL"
                    description="MOD_BEARSLIVESEARCH_END_POSITION_DESC"
                    default=""
                />
            </fieldset>
            <fieldset name = "advanced">
                <field
                        name = "layout"
                        type = "modulelayout"
                        label = "JFIELD_ALT_LAYOUT_LABEL"
                        class = "form-select"
                        validate = "moduleLayout"
                />

                <field
                        name = "moduleclass_sfx"
                        type = "textarea"
                        label = "COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                        rows = "3"
                        validate = "CssIdentifier"
                />

                <field
                        name = "cache"
                        type = "list"
                        label = "COM_MODULES_FIELD_CACHING_LABEL"
                        default = "1"
                        filter = "integer"
                        validate = "options"
                >
                    <option value = "1">JGLOBAL_USE_GLOBAL</option>
                    <option value = "0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>

                <field
                        name = "cache_time"
                        type = "number"
                        label = "COM_MODULES_FIELD_CACHE_TIME_LABEL"
                        default = "900"
                        filter = "integer"
                />
            </fieldset>
        </fields>
    </config>
    <updateservers>
        <server type = "extension" priority = "1" name = "Bears Live Search Updates">https://raw.githubusercontent.com/N6REJ/mod_bearslivesearch/main/updates.xml</server>
    </updateservers>
</extension>
