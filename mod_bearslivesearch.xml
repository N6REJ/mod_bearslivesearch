<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="4.0" client="site" method="upgrade">
    <name>mod_bearslivesearch</name>
    <author>N6REJ</author>
    <authorEmail>troy@hallhome.us</authorEmail>
    <authorUrl>https://hallhome.us/software</authorUrl>
    <creationDate>2025-07-15</creationDate>
    <copyright>Copyright (c) 2025 N6REJ</copyright>
    <license>GNU General Public License version 3 or later; see License.txt</license>
    <version>2025.7.15.1</version>
    <description>Bears Accessibility search module using Ajax.</description>
    <files>
        <filename module="mod_bearslivesearch">mod_bearslivesearch.php</filename>
        <filename>helper.php</filename>
        <filename>tmpl/default.php</filename>
        <filename>media/js/bearslivesearch.js</filename>
        <filename>media/css/bearslivesearch.css</filename>
        <filename>ajax.php</filename>
        <filename>language/en-GB/en-GB.mod_bearslivesearch.ini</filename>
        <filename>language/en-GB/en-GB.mod_bearslivesearch.sys.ini</filename>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.mod_bearslivesearch.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.mod_bearslivesearch.sys.ini</language>
    </languages>
    <module>
        <published>0</published>
    </module>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="input_margin" type="text" label="MOD_BEARSLIVESEARCH_INPUT_MARGIN" description="MOD_BEARSLIVESEARCH_INPUT_MARGIN_DESC" default="1em 0" />
                <field name="output_margin" type="text" label="MOD_BEARSLIVESEARCH_OUTPUT_MARGIN" description="MOD_BEARSLIVESEARCH_OUTPUT_MARGIN_DESC" default="1em 0" />
                <field name="use_fontawesome" type="radio" label="MOD_BEARSLIVESEARCH_USE_FONTAWESOME" description="MOD_BEARSLIVESEARCH_USE_FONTAWESOME_DESC" default="0">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="show_input_icon" type="radio" label="MOD_BEARSLIVESEARCH_SHOW_INPUT_ICON" description="MOD_BEARSLIVESEARCH_SHOW_INPUT_ICON_DESC" default="1">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="input_icon" type="text" label="MOD_BEARSLIVESEARCH_INPUT_ICON" description="MOD_BEARSLIVESEARCH_INPUT_ICON_DESC" default="fas fa-search" />
                <field name="icon_position" type="list" label="MOD_BEARSLIVESEARCH_ICON_POSITION" description="MOD_BEARSLIVESEARCH_ICON_POSITION_DESC" default="end">
                    <option value="beginning">MOD_BEARSLIVESEARCH_ICON_POSITION_BEGINNING</option>
                    <option value="end">MOD_BEARSLIVESEARCH_ICON_POSITION_END</option>
                </field>
            </fieldset>
            <fieldset name="advanced">
                <field
                    name="moduleclass_sfx"
                    type="text"
                    label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                    description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
                <field
                    name="cache"
                    type="list"
                    default="1"
                    label="COM_MODULES_FIELD_CACHING_LABEL"
                    description="COM_MODULES_FIELD_CACHING_DESC">
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>
                <field
                    name="cache_time"
                    type="text"
                    default="900"
                    label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
                    description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
                <field
                    name="cachemode"
                    type="hidden"
                    default="static">
                    <option value="static"></option>
                </field>
            </fieldset>
        </fields>
    </config>
    <updateservers>
        <server type="extension" priority="1" name="Bears Live Search Updates">https://raw.githubusercontent.com/N6REJ/mod_bearslivesearch/main/updates.xml</server>
    </updateservers>
</extension>
